<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
    </style>


    <style name="AppTheme.Detail">
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/ActionBar.Detail</item>
        <item name="android:actionBarStyle">@style/ActionBar.Detail</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="ActionBar.Detail" parent="AppTheme.AppBarOverlay">
        <item name="background">@color/transparent_actionbar_background</item>
        <item name="displayOptions">showHome|homeAsUp</item>
    </style>


</resources>
